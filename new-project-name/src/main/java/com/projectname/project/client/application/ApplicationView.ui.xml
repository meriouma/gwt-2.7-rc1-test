<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p='urn:import:com.projectname.project.client.polymer'>

    <ui:style>
        .bgColor {
            background: #0f9d58;
        }

        .menuButton {
        }

        core-toolbar {
            color: #f1f1f1;
            fill: #f1f1f1;
        }

        .whiteBg {
            background: #fff;
        }

        .main {
            height: 100%;
        }

        .main > div {
            height: 100%;
        }
    </ui:style>

    <g:HTMLPanel>
        <p:DrawerPanel ui:field="drawerPanel" responsiveWidth="800px">
            <p:HeaderPanel styleName="{style.whiteBg}">
                <p:Toolbar ui:field="menuToolbar" heightClass="NORMAL" styleName="{style.bgColor}">
                    <span>Menu</span>
                </p:Toolbar>
                <p:PaperItem label="Page one" ui:field="pageOne"/>
                <p:PaperItem label="Page two" ui:field="pageTwo"/>
            </p:HeaderPanel>
            <p:HeaderPanel>
                <p:Toolbar ui:field="toolbar" heightClass="NORMAL" styleName="{style.bgColor}">
                    <p:PaperIconButton styleName="{style.menuButton}" ui:field="menu" icon="menu"/>
                    <span flex="">Title</span>
                    <p:PaperIconButton icon="refresh"/>
                    <paper-icon-button ui:field="more" icon="more-vert"/>
                </p:Toolbar>
                <p:AnimatedPages ui:field="pages" styleName="{style.main}" transitions="slide-from-right">
                </p:AnimatedPages>
            </p:HeaderPanel>
        </p:DrawerPanel>
    </g:HTMLPanel>
</ui:UiBinder>
